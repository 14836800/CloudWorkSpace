#foreach($col in $colList)
    #if(${col.pk} == "1")
        #set($mainKey =${col.javaname})
        #break
    #end
#end
Ext.define('${ppsc.pci.projectName}.view.module.${classAllLowName}.${className}Controller', {
    extend: 'Ext.app.ViewController',
    alias: 'controller.${classAllLowName}',

    requires: [
    #foreach($col in $colList)
        #if(${col.dbType} == 'TIMESTAMP' || ${col.dbType} == 'DATE')
        'Ext.ux.time.DateTimeField',#break
        #end
    #end
        '${ppsc.pci.projectName}.util.CustomWindow'
    ],

    /**
     * Called when the view is created
     */
    init: function () {

    },
    //获取表单数据
    getFormData: function (form) {
        let formData = form.getForm().getValues();
        return formData;
    },
    //获取参数
    getParams: function (pageIndex) {
        let params = {};
        if (pageIndex) {
            params.pageNo = pageIndex;
        } else {
            params.pageNo = this.getView().getViewModel().get('gridPageStore').currentPage;
        }
        params.pageSize = this.getView().getViewModel().get('gridPageStore').pageSize;

        //获取表单数据
        let formPanel = this.getView().lookup('${classLowName}ConditionForm');
        if (formPanel) {
            let form = formPanel.getForm();
            let formData = form.getValues();
            for (let key in formData) {
                params[key] = formData[key];
            }
        }
        return params;
    },
    gridRenderHandler: function (grid, eOpts) {
        //模块初始化执行查询
        let params = this.getParams(1);
        this.loadPageData(params);
    },
    pageButtonChange: function (thisExt, pageIndex, eOpts) {
        this.loadPageData(this.getParams(pageIndex));
        return false;
    },
    loadPageData: function (params) {
        let meView = this.getView();
        let mask = ajax.fn.showMask(meView, '数据加载中...');

        //执行成功回调
        function successCallBack(response, opts) {
            ajax.fn.hideMask(mask);
            //查询结果转json对象
            let result = Ext.JSON.decode(decodeURIComponent((response.responseText)), true);
            if (result) {
                //保存页面信息
                meView.getViewModel().set('gridPageStore', {
                    total: result['data']['total'],
                    currentPage: result['data']['pageNum'],
                    pageSize: result['data']['pageSize']
                });

                //结果展示
                let gData = result['data']['list'];
                let grid = meView.down('gridpanel');
                if (grid && gData) {
                    let gStore = new Ext.data.Store({
                        data: gData
                    });
                    grid.setStore(gStore);
                }
            }
        }

        //执行失败回调
        function failureCallBack(response, opts) {
            ajax.fn.hideMask(mask);
        }

        ajax.fn.execute(params, 'GET', conf.sys.serviceUrl + '${classLowName}/get${className}ExByPaging', successCallBack, failureCallBack);
    },
    //重置条件
    resetHandler: function () {
        let formPanel = this.getView().lookup('${classLowName}ConditionForm');
        if (formPanel) {
            let form = formPanel.getForm();
            form.reset();
        }
    },
    //执行查询
    executeHandler: function () {
        //每次查询重置页码
        let params = this.getParams(1);
        this.loadPageData(params);
    }#if(${managing} == true),
     //执行删除操作
    onRemoveClick: function (view, recIndex, cellIndex, item, e, record) {
        let me = this;
        //询问是否删除
        Ext.Msg.show({
            title: '温馨提示',
            closeToolText: '关闭',
            buttonText: {
                ok: '确定',
                cancel: '取消'
            },
            message: '是否删除当前记录?',
            buttons: Ext.Msg.OKCANCEL,
            icon: Ext.Msg.QUESTION,
            fn: function (btn) {
                if (btn === 'ok') {
                    //执行删除
                    me.removeRecord(me, record);
                }
            }
        });
    },
    //删除记录
    removeRecord: function (me, record) {
		let params = {
			${mainKey}: record.get('${mainKey}')
		};
	
        let meView = me.getView();
        let mask = ajax.fn.showMask(meView, '记录删除中...');

        //执行成功回调
        function successCallBack(response, opts) {
            ajax.fn.hideMask(mask);
            //查询结果转json对象
            let result = Ext.JSON.decode(decodeURIComponent((response.responseText)), true);
            //执行成功,web表格释放对应的记录
            if (result['status'] === 1) {
                record.drop();
            }
        }

        //执行失败回调
        function failureCallBack(response, opts) {
            ajax.fn.hideMask(mask);
        }

        ajax.fn.execute(params, 'GET', conf.sys.serviceUrl + '${classLowName}/delete${className}', successCallBack, failureCallBack);
    },
    //创建弹窗窗口
    openWindow: function (me, action, title, icon, record) {
        let win = Ext.create('widget.cwindow', {
            title: title,
            iconCls: icon,
            closeToolText: '关闭',
            height: 500,
            width: 400,
            bodyPadding: 5
        }).show();

        let formPanel = null;
        if (action === 'detail') {
            formPanel = Ext.create('Ext.form.Panel', {
                border: true,
                bodyPadding: 10,
                fieldDefaults: {
                    labelAlign: 'left',
                    msgTarget: 'side',
                    labelWidth: 100,
                    labelStyle: 'font-weight:bold'
                },

                defaults: {
                    xtype: 'textfield',
                    readOnly: true,
                    border: false
                },
                layout: {
                    type: 'vbox',
                    pack: 'start',
                    align: 'stretch'
                },
                items: [
                #foreach($col in $colList)
	             {
	                fieldLabel: '${col.desc}',
                    name: '${col.javaname}',
                    margin: '0 0 10 0'
	             }#if($velocityCount != $colList.size()),#end
             	#end
                ]
            });
            win.add(formPanel);
            me.detailRecord(me, formPanel, record);
        } else if (action === 'edit') {
            formPanel = Ext.create('Ext.form.Panel', {
                border: true,
                bodyPadding: 10,
                fieldDefaults: {
                    labelAlign: 'left',
                    msgTarget: 'side',
                    labelWidth: 100,
                    labelStyle: 'font-weight:bold'
                },

                defaults: {
                    xtype: 'textfield',
                    readOnly: false,
                    border: false,
                    allowBlank: false
                },
                layout: {
                    type: 'vbox',
                    pack: 'start',
                    align: 'stretch'
                },
                items: [
                #foreach($col in $colList)
	             {
	                #if(${col.dbType} == 'TIMESTAMP' || ${col.dbType} == 'DATE')
                    xtype: 'datetimefield',
                    format: 'Y-m-d H:i:s',
	                #end
	                fieldLabel: '${col.desc}',
                    name: '${col.javaname}',
                    margin: '0 0 10 0'
	             }#if($velocityCount != $colList.size()),#end
             	#end
                ],
                buttons: [
                    '->',
                    {
                        text: '取消', handler: function () {
                            if (win) {
                                win.close();
                            }
                        }
                    },
                    {
                        text: '保存', formBind: true, handler: function () {
                            let mask = ajax.fn.showMask(formPanel, '保存中...');
                            //获取表单数据
                            let params = me.getFormData(formPanel);

                            //执行成功回调
                            function successCallBack(response, opts) {
                                ajax.fn.hideMask(mask);
                                //查询结果转json对象
                                let result = Ext.JSON.decode(decodeURIComponent((response.responseText)), true);
                                //执行成功,更新Web表格对应的记录
                                if (result['status'] === 1) {
                                    for (let key in params) {
                                        record.set(key, params[key]);
                                    }
                                    //重载Web表格数据
                                    record.store.reload();
                                    //关闭窗口
                                    win.close();
                                }
                            }

                            //执行失败回调
                            function failureCallBack(response, opts) {
                                ajax.fn.hideMask(mask);
                            }

                            ajax.fn.execute(params, 'GET', conf.sys.serviceUrl + '${classLowName}/update${className}', successCallBack, failureCallBack);
                        }
                    },
                    '->'
                ]
            });
            win.add(formPanel);
            me.editRecord(me, formPanel, record);
        } else if (action === 'add') {
            formPanel = Ext.create('Ext.form.Panel', {
                border: true,
                bodyPadding: 10,
                fieldDefaults: {
                    labelAlign: 'left',
                    msgTarget: 'side',
                    labelWidth: 100,
                    labelStyle: 'font-weight:bold'
                },

                defaults: {
                    xtype: 'textfield',
                    readOnly: false,
                    border: false,
                    allowBlank: false
                },
                layout: {
                    type: 'vbox',
                    pack: 'start',
                    align: 'stretch'
                },
                items: [
                #foreach($col in $colList)
	             {
	                #if(${col.dbType} == 'TIMESTAMP' || ${col.dbType} == 'DATE')
                    xtype: 'datetimefield',
                    format: 'Y-m-d H:i:s',
	                #end
	                fieldLabel: '${col.desc}',
                    name: '${col.javaname}',
                    margin: '0 0 10 0'
	             }#if($velocityCount != $colList.size()),#end
             	#end
                ],
                buttons: [
                    '->',
                    {
                        text: '取消', handler: function () {
                            if (win) {
                                win.close();
                            }
                        }
                    },
                    {
                        text: '保存', formBind: true, handler: function () {
                            let mask = ajax.fn.showMask(formPanel, '保存中...');
                            //获取表单数据
                            let params = me.getFormData(formPanel);

                            //执行成功回调
                            function successCallBack(response, opts) {
                                ajax.fn.hideMask(mask);
                                //查询结果转json对象
                                let result = Ext.JSON.decode(decodeURIComponent((response.responseText)), true);
                                //执行成功,更新Web表格
                                if (result['status'] === 1) {
                                    //在表格第一行插入新增的记录
                                    record.store.insert(0, params);
                                    //重载Web表格数据
                                    record.store.reload();
                                    //关闭窗口
                                    win.close();
                                }
                            }

                            //执行失败回调
                            function failureCallBack(response, opts) {
                                ajax.fn.hideMask(mask);
                            }
	
							ajax.fn.execute(params, 'GET', conf.sys.serviceUrl + '${classLowName}/insert${className}', successCallBack, failureCallBack);
                        }
                    },
                    '->'
                ]
            });
            win.add(formPanel);
        }
    },
    //执行详情查看操作
    onDetailClick: function (view, recIndex, cellIndex, item, e, record) {
        this.openWindow(this, item['action'], item['tooltip'], item['iconCls'], record);
    },
    detailRecord: function (me, formPanel, record) {
        if (record) {
            let data = record.getData();
            if (data) {
                let form = formPanel.getForm();
                let formData = form.getValues();
                for (let key in formData) {
                    form.findField(key).setValue(data[key]);
                }
            }
        }
    },
    //执行编辑操作
    onEditClick: function (view, recIndex, cellIndex, item, e, record) {
        this.openWindow(this, item['action'], item['tooltip'], item['iconCls'], record);
    },
    editRecord: function (me, formPanel, record) {
        if (record) {
            let data = record.getData();
            if (data) {
                let form = formPanel.getForm();
                let formData = form.getValues();
                for (let key in formData) {
                    form.findField(key).setValue(data[key]);
                }
            }
        }
    },
    //执行新增操作
    onAddClick: function (view, recIndex, cellIndex, item, e, record) {
        this.openWindow(this, item['action'], item['tooltip'], item['iconCls'], record);
    }
    #end
});




